<User>:
  name: "user_screen"
  MDGridLayout:
    cols: 2
    size_hint: 0.3, 0.3
    pos_hint: {"x":0.1, "top":0.9}
    spacing: 15, 0

    MDTextField:
      id: TP
      hint_text: "True Positive"
    MDTextField:
      id: FP
      hint_text: "False Positive"
    MDTextField:
      id: FN
      hint_text: "False Negative"
    MDTextField:
      id: TN
      hint_text: "True Negative"

  MDGridLayout:
    cols: 2
    size_hint: 0.3, 0.3
    pos_hint: {"x":0.1, "top":0.65}
    spacing: 10, 10

    MDRaisedButton:
      text: "Submit"
      on_press: root.submit()

    MDRaisedButton:
      text: "Clear"
      md_bg_color: "red"
      on_press: root.clear()

  MDFloatLayout:
    MDList:
      id: container
      pos_hint: {"center_x": 1.01, "center_y": 0.5}

<RootWidget>:
  User
